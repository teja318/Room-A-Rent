<h2> Edit Room </h2>
<lis><%= form_for @room do |f| %></lis>
<label>Name: </label>
	<%= f.text_field :name %> </br>

<label>Description: </label>
	<%= f.text_area :description %> </br>

<label>Price: </label>
	<%= f.text_field :price %> </br>

<label>Rules: </label>
	<%= f.text_field :rules %> </br>
<label>Images: </label>
	<%= f.file_field :images %> </br>


<label>Address: </label>
	<%= f.text_area :address %> </br>

<label>City: </label>
	<%= f.collection_select :city_id, City.all, :id, :name, prompt: "select city" %> </br>
<label>Amenity: </label>
  <%#= f.label :amenity_rooms %>
  <%= f.collection_check_boxes :amenity_ids, Amenity.all, :id, :name %></br>

<%= f.submit %>
	<% end %>
