

<div class="row">
	<div class="col-md-8">
		<div class="page-header">
			<h2>authorized rooms</h2>
		</div>
		<% if @rooms.empty? %>
	<h3>No rooms to authorize </h3>

<% else %>
		<table class="table table-bordered" id="myTable">
			<thead>
				<tr>
					<th>Name</th>
					
					<th>Description</th>
					<th>Price</th>
					<th>Address</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @rooms.each do |room| %>			
					<tr>
						<td><%= link_to room.name, room_path(room.id) %></td>
						
						<td><%= room.description %></td>
						<td><%= room.price %></td>
						<td><%= room.address %></td>
						<td>
							<%= form_for room do |r| %>
							<%= r.hidden_field :is_authorized, value: true %>
							<%= r.submit "authorize" %>
							<% end %>		
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
<% end %>

</div>


